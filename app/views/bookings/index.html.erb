<h1>TES RESERVATIONS</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potager.bookings.each do |potager.booking| %>
      <tr>
        <td><%= potager.name %></td>
        <% if potager.photo.attached? %>
          <td><%= cl_image_tag potager.photo.key %></td>
        <% end %>
        <td><%= link_to 'Show', potager %></td>
        <td><%= link_to 'Destroy', potager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
