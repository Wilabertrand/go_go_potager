
<div class="container py-4">
  <div class="pb-4"><h1 class="intro-index">Découvrez nos espaces à cultiver <i class="fas fa-leaf"></i></h1></div>
  
  <div class="content">
    <div class="potager-grid">
      <% @potagers.each do |potager| %>
        <%= link_to potager do %>
          <div class="card-trip">
            <% if potager.photos.present? && potager.photos.attached? %>
              <%= cl_image_tag potager.photos.first.key, class:"card-img" %>
            <% else %>
            <%= image_tag 'jardins-partages.jpg', class:"card-img" %>
            <% end %>
            <div class="card-trip-infos">
              <h2><%= potager.name %></h2>
              <p><%= potager.surface %></p>
              <p><%= potager.description.truncate(30)%>
              <h2 class="card-trip-pricing"><%= potager.price %>€</h2>
              <img src="https://www.it-services.com.tn/wp-content/uploads/2017/04/avatar-2.png" class="card-trip-user avatar-bordered"/>
            </div>
          </div>
        <%end%>
      <% end %>
    </div>
    <div id="map"
      style="width: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
